/* 订单确认页面样式 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 页面标题 */
.page-header {
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 通用区块样式 */
.section {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-arrow {
  color: #999;
  font-size: 28rpx;
}

/* 地址区块 */
.address-section {
  cursor: pointer;
}

.address-content {
  padding: 20rpx 0;
}

.address-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.address-name-phone {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.address-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.address-phone {
  font-size: 28rpx;
  color: #666;
}

.address-detail {
  font-size: 28rpx;
  color: #666;
  line-height: 1.4;
}

.address-empty {
  padding: 40rpx 0;
  text-align: center;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 订单商品 */
.order-items {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.order-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-item:last-child {
  border-bottom: none;
}

.item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.item-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.item-price {
  font-size: 28rpx;
  color: #ff6b35;
  font-weight: bold;
}

.item-quantity {
  display: flex;
  align-items: center;
}

.quantity-text {
  font-size: 28rpx;
  color: #666;
}

/* 支付方式 */
.payment-methods {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.payment-method {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  position: relative;
}

.payment-method.selected {
  border-color: #ff6b35;
  background-color: #fff5f2;
}

.payment-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.payment-name {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.payment-check {
  color: #ff6b35;
  font-size: 32rpx;
  font-weight: bold;
}

/* 订单备注 */
.remark-content {
  padding: 20rpx 0;
}

.remark-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.4;
}

/* 价格明细 */
.price-details {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.price-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price-label {
  font-size: 28rpx;
  color: #666;
}

.price-value {
  font-size: 28rpx;
  color: #333;
}

.price-value.discount {
  color: #ff6b35;
}

.price-item.total {
  border-top: 1rpx solid #eee;
  padding-top: 15rpx;
  margin-top: 10rpx;
}

.price-item.total .price-label {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.price-value.total-amount {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b35;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 100;
}

.total-info {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.total-label {
  font-size: 28rpx;
  color: #666;
}

.total-amount {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b35;
}

.submit-btn {
  background-color: #ff6b35;
  color: #fff;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.submit-btn.loading {
  background-color: #ccc;
}

.submit-btn:disabled {
  background-color: #ccc;
}

/* 优惠券选择 */
.coupon-info {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.coupon-text {
  font-size: 28rpx;
  color: #666;
}

/* 优惠券选择弹窗 */
.coupon-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.coupon-modal.show {
  opacity: 1;
  visibility: visible;
}

.coupon-modal-content {
  background-color: #fff;
  width: 100%;
  max-height: 80vh;
  border-radius: 20rpx 20rpx 0 0;
  overflow: hidden;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.coupon-modal.show .coupon-modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  cursor: pointer;
}

.coupon-list {
  max-height: 60vh;
  overflow-y: auto;
  padding: 20rpx;
}

.coupon-item {
  display: flex;
  background: linear-gradient(135deg, #ff6b35 0%, #ff8c42 100%);
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 53, 0.2);
}

.coupon-item.selected {
  border: 3rpx solid #ff6b35;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 53, 0.4);
}

.coupon-left {
  width: 200rpx;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  position: relative;
}

.coupon-left::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 20rpx;
  height: 20rpx;
  background-color: #f5f5f5;
  border-radius: 50%;
  box-shadow: 0 0 0 4rpx #f5f5f5;
}

.coupon-value {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.coupon-condition {
  font-size: 22rpx;
  opacity: 0.9;
}

.coupon-right {
  flex: 1;
  padding: 30rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.coupon-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.coupon-desc {
  font-size: 26rpx;
  color: #666;
}

.no-coupon {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx;
}

.no-coupon-text {
  font-size: 28rpx;
  color: #999;
} 