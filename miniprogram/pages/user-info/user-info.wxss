.user-info-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 头像区域 */
.avatar-section {
  background-color: #fff;
  padding: 60rpx 0;
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}

.avatar-wrapper {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid #ff6b35;
}

.avatar-edit {
  margin-top: 20rpx;
  padding: 10rpx 20rpx;
  background-color: rgba(255, 107, 53, 0.1);
  border-radius: 20rpx;
}

.edit-text {
  font-size: 24rpx;
  color: #ff6b35;
}

/* 表单区域 */
.form-section {
  background-color: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.form-group {
  padding: 0 30rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  width: 120rpx;
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
}

.form-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.phone-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.phone-text {
  font-size: 28rpx;
  color: #333;
}

.btn-bind {
  background-color: #ff6b35;
  color: #fff;
  border: none;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  margin: 0;
}

.gender-picker,
.date-picker {
  flex: 1;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

/* 按钮区域 */
.button-section {
  padding: 0 20rpx;
}

.btn-save {
  width: 100%;
  background-color: #ff6b35;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.btn-save:active {
  background-color: #e55a2b;
} 