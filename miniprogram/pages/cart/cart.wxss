.cart-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

/* 空购物车样式 */
.empty-cart {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 60rpx;
}

.btn-go-menu {
  background-color: #ff6b35;
  color: #fff;
  border: none;
  border-radius: 40rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
}

/* 购物车内容样式 */
.cart-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

/* 商品列表 */
.cart-list {
  flex: 1;
  background-color: #fff;
}

.cart-item {
  display: flex;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.item-info {
  flex: 1;
  display: flex;
  margin-right: 20rpx;
}

.item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  background-color: #f0f0f0;
}

.item-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.item-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 15rpx;
  line-height: 1.4;
}

.item-price {
  font-size: 28rpx;
  font-weight: bold;
  color: #ff6b35;
}

.item-actions {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: space-between;
}

.quantity-control {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.btn-minus, .btn-plus {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
}

.btn-minus {
  background-color: #f5f5f5;
  color: #666;
}

.btn-plus {
  background-color: #ff6b35;
  color: #fff;
}

.quantity {
  margin: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  min-width: 40rpx;
  text-align: center;
}

.btn-delete {
  background-color: #ff4757;
  color: #fff;
  border: none;
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
  font-size: 22rpx;
}

/* 优惠券选择 */
.coupon-section {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 0 30rpx;
}

.coupon-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.coupon-info {
  flex: 1;
}

.coupon-label {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
}

.coupon-value {
  font-size: 26rpx;
  color: #ff6b35;
}

.coupon-placeholder {
  font-size: 26rpx;
  color: #999;
}

/* 地址选择 */
.address-section {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 0 30rpx;
}

.address-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.address-info {
  flex: 1;
}

.address-label {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
}

.address-details {
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
}

.address-name {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 5rpx;
}

.address-address {
  font-size: 24rpx;
  color: #666;
}

.address-placeholder {
  font-size: 26rpx;
  color: #999;
}

/* 备注 */
.remark-section {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 0 30rpx;
}

.remark-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
}

.remark-label {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
  min-width: 120rpx;
}

.remark-input {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

/* 价格明细 */
.price-section {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 30rpx;
}

.price-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: #666;
}

.price-item.total {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.discount {
  color: #ff6b35;
}

.total-price {
  color: #ff6b35;
  font-size: 32rpx;
}

.price-divider {
  height: 1rpx;
  background-color: #f5f5f5;
  margin: 20rpx 0;
}

/* 底部结算栏 */
.checkout-bar {
  background-color: #fff;
  border-top: 1rpx solid #eee;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.checkout-info {
  display: flex;
  align-items: center;
}

.total-label {
  font-size: 28rpx;
  color: #333;
}

.total-amount {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b35;
}

.btn-checkout {
  background-color: #ff6b35;
  color: #fff;
  border: none;
  border-radius: 40rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
  font-weight: bold;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .cart-item {
    padding: 20rpx;
  }
  
  .item-image {
    width: 100rpx;
    height: 100rpx;
  }
  
  .item-name {
    font-size: 28rpx;
  }
  
  .item-desc {
    font-size: 22rpx;
  }
  
  .price-section {
    padding: 20rpx;
  }
} 