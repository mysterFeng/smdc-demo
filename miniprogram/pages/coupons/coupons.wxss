.coupons-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 标签切换 */
.tab-section {
  background-color: #fff;
  display: flex;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  padding: 20rpx 0;
}

.tab-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.tab-count {
  background-color: #ff6b35;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
  min-width: 20rpx;
  text-align: center;
}

.tab-item.active .tab-text {
  color: #ff6b35;
  font-weight: bold;
}

/* 优惠券列表 */
.coupons-list {
  padding: 0 20rpx;
}

.coupon-item {
  background: linear-gradient(135deg, #ff6b35 0%, #ff8c42 100%);
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  display: flex;
  position: relative;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 53, 0.2);
}

.coupon-item.disabled {
  background: linear-gradient(135deg, #ccc 0%, #ddd 100%);
}

/* 优惠券左侧 */
.coupon-left {
  width: 200rpx;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  position: relative;
}

.coupon-left::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 20rpx;
  height: 20rpx;
  background-color: #f5f5f5;
  border-radius: 50%;
  box-shadow: 0 0 0 4rpx #f5f5f5;
}

.coupon-value {
  display: flex;
  align-items: baseline;
  margin-bottom: 10rpx;
}

.value-symbol {
  font-size: 24rpx;
  margin-right: 4rpx;
}

.value-number {
  font-size: 48rpx;
  font-weight: bold;
}

.coupon-condition {
  font-size: 22rpx;
  opacity: 0.9;
}

/* 优惠券右侧 */
.coupon-right {
  flex: 1;
  padding: 30rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.coupon-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.coupon-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.coupon-date {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.coupon-status {
  display: flex;
  justify-content: flex-end;
}

.status-text {
  font-size: 24rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

.status-text.available {
  background-color: #e8f5e8;
  color: #52c41a;
}

.status-text.used {
  background-color: #f0f0f0;
  color: #999;
}

.status-text.expired {
  background-color: #fff2f0;
  color: #ff4d4f;
}

/* 优惠券遮罩 */
.coupon-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1;
}

.mask-text {
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.btn-get-coupon {
  background-color: #ff6b35;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.btn-coupon-center {
  width: 100%;
  background-color: #ff6b35;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
} 