.about-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 应用信息 */
.app-info {
  background-color: #fff;
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.app-logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.app-version {
  font-size: 26rpx;
  color: #999;
}

/* 通用样式 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* 功能介绍 */
.features-section {
  background-color: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 12rpx;
  padding: 30rpx;
}

.features-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.feature-item {
  display: flex;
  align-items: flex-start;
}

.feature-dot {
  color: #ff6b35;
  font-size: 28rpx;
  margin-right: 15rpx;
  margin-top: 2rpx;
}

.feature-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 联系我们 */
.contact-section {
  background-color: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 12rpx;
  padding: 30rpx;
}

.contact-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border: 1rpx solid #f0f0f0;
  border-radius: 8rpx;
  background-color: #fafafa;
}

.contact-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.contact-info {
  flex: 1;
}

.contact-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.contact-value {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.contact-action {
  font-size: 24rpx;
  color: #ff6b35;
  padding: 8rpx 16rpx;
  border: 1rpx solid #ff6b35;
  border-radius: 15rpx;
  background-color: #fff2f0;
}

/* 公司信息 */
.company-section {
  background-color: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 12rpx;
  padding: 30rpx;
}

.company-info {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.company-item {
  display: flex;
  align-items: flex-start;
}

.company-label {
  font-size: 26rpx;
  color: #666;
  min-width: 120rpx;
}

.company-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

/* 版权信息 */
.copyright-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 20rpx;
}

.copyright-text {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
} 