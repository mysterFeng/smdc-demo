/* 极简风格首页样式 */
@import "../../style/theme.wxss";

.container {
  background: var(--bg-color);
  min-height: 100vh;
  padding-bottom: 32rpx;
}

/* 搜索栏 */
.search-bar {
  padding: 32rpx 24rpx 0 24rpx;
  background: var(--bg-color);
  margin-bottom: 24rpx;
}
.search-input {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
}
.search-input icon {
  margin-right: 16rpx;
}
.search-input input {
  flex: 1;
  font-size: 28rpx;
  background: transparent;
  border: none;
}

/* 轮播图 */
.banner-section {
  margin-bottom: 32rpx;
}
.banner-image {
  width: 100%;
  height: 280rpx;
  border-radius: 16rpx;
}

/* 快捷功能 */
.quick-actions {
  display: flex;
  justify-content: space-between;
  background: var(--bg-color);
  padding: 0 24rpx 24rpx 24rpx;
  margin-bottom: 24rpx;
}
.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.action-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: #FFF7E6;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(255,169,64,0.10);
}
.action-text {
  font-size: 24rpx;
  color: var(--text-main);
}

/* 区块样式 */
.section {
  background: #fff;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(34,34,34,0.06);
  margin-bottom: 32rpx;
  padding: 0;
}
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 24rpx 0 24rpx;
  height: 64rpx;
  border-bottom: 1rpx solid var(--divider-color);
  background: var(--bg-color);
}
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-main);
}
.section-more {
  font-size: 24rpx;
  color: var(--text-sub);
}

/* 菜品网格 */
.dish-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding: 24rpx;
}
.dish-item {
  background: #fff;
  border-radius: var(--border-radius);
  overflow: hidden;
  box-shadow: none;
  border: 1rpx solid var(--divider-color);
}
.dish-image {
  width: 100%;
  height: 180rpx;
  border-radius: 0;
}
.dish-info {
  padding: 16rpx 16rpx 12rpx 16rpx;
}
.dish-name {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-main);
  margin-bottom: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.dish-desc {
  font-size: 24rpx;
  color: var(--text-sub);
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.dish-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.dish-price {
  font-size: 28rpx;
  color: var(--accent-color);
  font-weight: bold;
}
.dish-action {
  display: flex;
  align-items: center;
}
.add-btn {
  width: 72rpx;
  height: 72rpx;
  background: var(--accent-color);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  box-shadow: 0 4rpx 12rpx rgba(255,169,64,0.10);
  transition: background 0.2s;
}
.add-btn:active {
  opacity: 0.8;
}
.quantity-control {
  display: flex;
  align-items: center;
}
.quantity-btn {
  width: 56rpx;
  height: 56rpx;
  background: var(--accent-color);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(255,169,64,0.10);
  transition: background 0.2s;
}
.quantity-btn:active {
  opacity: 0.8;
}
.quantity-text {
  margin: 0 12rpx;
  font-size: 24rpx;
  color: var(--text-main);
  min-width: 32rpx;
  text-align: center;
}

/* 店铺信息 */
.shop-info {
  padding: 24rpx;
}
.shop-item {
  display: flex;
  margin-bottom: 12rpx;
}
.shop-label {
  color: var(--text-sub);
  font-size: 24rpx;
}
.shop-value {
  color: var(--text-main);
  font-size: 24rpx;
}

/* 登录提示 */
.login-tip {
  margin: 32rpx 24rpx;
  padding: 32rpx;
  background: #fff;
  border-radius: var(--border-radius);
  text-align: center;
  color: var(--text-main);
  font-size: 28rpx;
}
.login-tip button {
  background: linear-gradient(90deg, #FFA940 0%, #FFB84C 100%);
  color: #fff;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(255,169,64,0.12);
  transition: background 0.2s;
  width: 100%;
  margin-top: 24rpx;
}
.login-tip button:active {
  background: linear-gradient(90deg, #FFB84C 0%, #FFA940 100%);
  opacity: 0.85;
}
.btn-small {
  font-size: 24rpx;
  padding: 8rpx 0;
  min-width: 120rpx;
} 