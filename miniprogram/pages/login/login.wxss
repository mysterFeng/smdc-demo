.login-container {
  height: 100vh;
  background: linear-gradient(135deg, #ff6b35 0%, #ff8c42 100%);
  position: relative;
  overflow: hidden;
}

/* 背景装饰 */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.circle-1 {
  width: 200rpx;
  height: 200rpx;
  top: 10%;
  right: -50rpx;
}

.circle-2 {
  width: 150rpx;
  height: 150rpx;
  top: 30%;
  left: -30rpx;
}

.circle-3 {
  width: 100rpx;
  height: 100rpx;
  bottom: 20%;
  right: 20%;
}

/* 主要内容 */
.login-content {
  position: relative;
  z-index: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 100rpx 40rpx 60rpx;
}

/* Logo区域 */
.logo-section {
  text-align: center;
  margin-bottom: 100rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  border-radius: 20rpx;
}

.app-name {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 20rpx;
}

.app-slogan {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 登录按钮区域 */
.login-section {
  margin-bottom: 80rpx;
}

.btn-wechat-login {
  width: 100%;
  background-color: #fff;
  color: #333;
  border: none;
  border-radius: 50rpx;
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.btn-wechat-login:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.wechat-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.login-tips {
  text-align: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
}

.link {
  color: #fff;
  text-decoration: underline;
}

/* 其他登录方式 */
.other-login {
  margin-bottom: 60rpx;
}

.divider {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.line {
  flex: 1;
  height: 1rpx;
  background-color: rgba(255, 255, 255, 0.3);
}

.divider-text {
  margin: 0 30rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

.other-methods {
  display: flex;
  justify-content: center;
}

.btn-phone-login {
  background-color: transparent;
  color: rgba(255, 255, 255, 0.8);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 40rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.btn-phone-login icon {
  margin-right: 10rpx;
}

.btn-phone-login:active {
  background-color: rgba(255, 255, 255, 0.1);
}

/* 底部信息 */
.footer {
  text-align: center;
}

.footer-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .login-content {
    padding: 80rpx 30rpx 50rpx;
  }
  
  .logo {
    width: 100rpx;
    height: 100rpx;
  }
  
  .app-name {
    font-size: 42rpx;
  }
  
  .app-slogan {
    font-size: 26rpx;
  }
  
  .btn-wechat-login {
    padding: 25rpx;
    font-size: 30rpx;
  }
  
  .wechat-icon {
    width: 36rpx;
    height: 36rpx;
  }
} 